<div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
  <h2>メッセージ一覧</h2>
  <ul>
    <% @conversations.each do |conversation| %>
      <% if conversation.target_user(current_user) != current_user.id %>
        <% if conversation.target_user(current_user).present? %>
          <div class="conversation-box">
            <li><%= conversation.target_user(current_user).name %></li>
            <% if conversation.messages.present? %>
              <li class="pull-left conversation-text"><%= conversation.messages.last.body %></li>
            <% end %>
            <li class="btn btn-default btn-xs pull-right"><%= link_to 'メッセージを確認', conversation_messages_path(conversation) %></li>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>

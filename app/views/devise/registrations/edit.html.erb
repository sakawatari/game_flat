<div class="wrapper col-md-4 col-md-offset-4 col-sm-10">
  <h2>ユーザーデータ</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_messages! %>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :ユーザーネーム %><br />
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <% if @user.provider.blank? %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :パスワード %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :確認要パスワード %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :現在のパスワード %> <i>(ユーザーデータを編集する際は入力してください。)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
      </div>
    <% end %>

    <div class="field">
      <%= profile_img(@user) if profile_img(@user) %>
      <%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>

    <div class="actions">
      <%= f.submit "変更", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <h3>アカウント削除</h3>

  <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除しますか？" }, method: :delete, class: "btn btn-default btn-block" %><br>

  <%= link_to "戻る", :back, class: "btn btn-default btn-block"  %><br>
</div>
